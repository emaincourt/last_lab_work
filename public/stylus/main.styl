body, html
    margin 0
    padding 0
    font-family 'Avenir'
    background-color #F0F2FC

header
    display flex
    flex-direction row
    align-items center
    justify-content flex-start
    background-color #34314C
    height 100px
    & > figure
        width auto
        height 70%
        margin 0 0 0 3%
        & > img
            height 200%
            width auto
            animation rotate 5s linear infinite
        & > figcaption
            font-family "Milkshake"
            font-size 1.5rem
            text-align center
            color white
            transform translate(0, -130%) rotate(-10deg)

a
    text-decoration none
    color inherit

nav
    *
        list-style none
        text-decoration none
        color white
    & > ul
        display flex
        flex-direction row
        align-items center
        justify-content space-between
        & > li
            margin 0 30px 0 30px
            background-color #F38130
            border-radius 5px
            padding 5px 10px 5px 10px
            &:hover
                background-color #FDA429

#articles
    position relative
    width 80%
    margin 100px auto 50px auto
    display flex
    flex-direction row
    align-items center
    justify-content space-around
    & > h2
        position absolute
        top 0
        left 0
        transform translate(0, -200%)
    article
        background-color #FAFAFA
        margin 0 10px 0 10px
        padding 30px 15px 30px 15px
        width 300px
        min-height 400px
    aside
        background-color #34314C
        color white
        padding 10px
        border-radius 5px
        font-size 0.7rem
        -webkit-box-shadow 2px 2px 3px 0px rgba(41,47,51,1)
        -moz-box-shadow 2px 2px 5px 0px rgba(41,47,51,1)
        box-shadow 2px 2px 5px 0px rgba(41,47,51,1)

h2
    font-family 'Aller Display'
    font-weight lighter

#contact
    width 50%
    margin auto
    display flex
    flex-direction row
    align-items center
    justify-content stretch
    padding 50px
    margin auto auto 100px auto
    background-color RGBA(52, 49, 76, 1.00)
    -webkit-box-shadow 2px 2px 5px 0px rgba(41,47,51,1)
    -moz-box-shadow 2px 2px 5px 0px rgba(41,47,51,1)
    box-shadow 2px 2px 5px 0px rgba(41,47,51,1)
    border-radius 15px
    & > form
        flex-grow 4
        background-color white
        padding 30px 15px 30px 15px
        border-radius 15px
    & > h3
        flex-grow 1
        color white

fieldset
    border none
    position relative

.f-size-bg
    width 100%
    height 100%
    background-size cover

.cover
    margin 15px

.article-container
    display flex
    flex-direction row
    align-items flex-start
    justify-content space-between
    & > article
        padding 0 30px 20px 30px
        margin-bottom 100px

footer
    position fixed
    top 100%
    left 0
    transform translate(0, -100%)
    width 100%
    height 50px
    background-color #34314C
    color white
    text-align center
    display flex
    flex-direction column